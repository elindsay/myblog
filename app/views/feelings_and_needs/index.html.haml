.needs_list
  Needs:
  %ul.category
    - @head_needs.each do |need|
      %li.grouping
        %ul
          %li.header
            = need.name
            - need.child_needs.each do |child_need|
              %li.child
                = child_need.name


.feelings_list
  Feelings:
  %ul.category
    - @head_feelings.each do |feeling|
      %li.grouping
        %ul
          %li.header
            = feeling.name
            - feeling.child_feelings.each do |child_feeling|
              %li.child
                = child_feeling.name

.enter_needs_and_feelings
  = form_tag feelings_and_needs_path do
    %p
      = label_tag :head_need_string
      = text_field_tag :head_need_string
    %p
      = label_tag :needs_string
      = text_field_tag :needs_string
    %p
      = label_tag :head_feeling_string
      = text_field_tag :head_feeling_string
    %p
      = label_tag :feelings_string
      = text_field_tag :feelings_string
    %p
      = submit_tag "Save"
